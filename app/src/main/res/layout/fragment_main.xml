<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/req_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="requests" />

    <Button
        android:id="@+id/req_frag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="requests 2" />

    <Button
        android:id="@+id/req_frag3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="requests 3" />

    <Button
        android:id="@+id/req_frag4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="requests 4" />
    <Button
        android:id="@+id/chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chat" />

    <Button
        android:id="@+id/bt_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="camera" />

    <Button
        android:id="@+id/bt_drag_and_drop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="drag and drop" />

    <Button
        android:id="@+id/bt_drag_and_drop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="drag and drop2" />

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Профиль" />

    <Button
        android:id="@+id/btn_subs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подписки" />

    <Button
        android:id="@+id/bt_log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="log out" />

    <Button
        android:id="@+id/bt_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="orders" />

    <Button
        android:id="@+id/bt_add_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add_ order" />

