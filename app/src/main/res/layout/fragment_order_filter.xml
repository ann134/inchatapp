<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="32dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тип работы"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_round_corners_32"
            android:backgroundTint="@color/gray_light_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fast_task"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_round_corners_32"
                android:backgroundTint="@color/colorAccent"
                android:gravity="center"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="Проектная"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_side_job"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="Подработка"
                android:textColor="@android:color/black" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Тип цены"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fix_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/bg_round_corners_32"
                android:backgroundTint="@color/colorAccent"
                android:gravity="center"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:text="Фиксированная"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_treaty_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:gravity="center"
                android:background="@drawable/bg_round_corners_32"
                android:backgroundTint="@color/gray_light_bg"
                android:layout_marginLeft="16dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:text="Договорная"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_free_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:gravity="center"
                android:background="@drawable/bg_round_corners_32"
                android:backgroundTint="@color/gray_light_bg"
                android:layout_marginLeft="16dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:text="Бесплано"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Категории"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_unchecked_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="СНЯТЬ ВЫДЕЛЕНИЕ"
                android:textColor="@color/text_gray"
                android:textSize="14sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_categories_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="26dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Прикрипленные файлы"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                />

            <Switch
                android:id="@+id/sw_attach_files"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <TextView
                android:id="@+id/tv_drop_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="142"
                android:gravity="center"
                android:padding="16dp"
                android:text="СБРОСИТЬ"
                android:textColor="@color/blue"
                android:background="@drawable/bg_stroke_blue"
                />
            <TextView
                android:id="@+id/tv_save_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="178"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:padding="16dp"
                android:text="СОХРАНИТЬ"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_blue_button"
                />
        </LinearLayout>



    </LinearLayout>

</androidx.core.widget.NestedScrollView>